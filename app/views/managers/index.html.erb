<p id="notice"><%= notice %></p>
<h1>Manager Search</h1>

<div class="panel panel-default">
  <div class="panel-body">
    <p id="notice"><%= notice %></p>


    <br><br><%= link_to 'New Manager', new_manager_path, :class=>"btn btn-default" %>

    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Address</th>
          <th>Phone</th>
          <th>Email</th>

          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @managers.each do |manager| %>
            <tr>
              <td><%= manager.m_first_name %></td>
              <td><%= manager.m_last_name %></td>
              <td><%= manager.address %></td>
              <td><%= manager.phone %></td>
              <td><%= manager.email %></td>
              <td><%= link_to 'More Details', manager, :class=> "btn btn-info btn-sm" %></td>
              <td><%= link_to 'Edit', edit_manager_path(manager), :class=> "btn btn-warning btn-sm" %></td>
              <td><%= link_to 'Delete', manager, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "btn btn-danger btn-sm" %></td>
            </tr>
        <% end %>
        </tbody>
      </table>


      <br>


    </div>


  </div>
</div>


