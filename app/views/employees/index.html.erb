<p id="notice"><%= notice %></p>
<h1>Employee Search</h1>

<div class="panel panel-default">
  <div class="panel-body">
    <p id="notice"><%= notice %></p>


    <%= form_tag customers_path, :method => 'get' do %>
        <div class="col-xs-4 ">
          <div class="input-group">
            <%= text_field_tag :search, params[:search], :placeholder => "Find client", :class => "form-control" %>
            <span class="input-group-btn">
             <%= submit_tag "Go", :name => nil, :class => "btn btn-default" %>
          </span>
          </div><!-- /input-group -->
        </div>
        <% end %><%= link_to "Advanced Search", new_csearch_path, :class=>"btn btn-default" %><br>
    <br><br><%= link_to 'New Employee', new_employee_path, :class=>"btn btn-default" %>

    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Address</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Manager</th>

          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @employees.each do |employee| %>
            <tr>
              <td><%= employee.e_first_name %></td>
              <td><%= employee.e_last_name %></td>
              <td><%= employee.address %></td>
              <td><%= employee.phone %></td>
              <td><%= employee.email %></td>
              <td><%= employee.manager.manager_full_name rescue "" %></td>
              <td><%= link_to 'More Details', employee, :class=> "btn btn-info btn-sm" %></td>
              <td><%= link_to 'Edit', edit_employee_path(employee), :class=> "btn btn-warning btn-sm" %></td>
              <td><%= link_to 'Delete', employee, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "btn btn-danger btn-sm" %></td>
            </tr>
        <% end %>
        </tbody>
      </table>


      <br>


    </div>













  </div>
</div>


