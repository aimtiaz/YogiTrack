<p id="notice"><%= notice %></p>
<div class="col-md-9">
<h1>Listing Customers</h1>

  <%= form_tag customers_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search Clients" %>
  <% end %>

<%= link_to "Advanced Search", new_csearch_path %>

<table>
  <thead>
    <tr>
      <th>C first name</th>
      <th>C last name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Emergency phone</th>
      <th>Email</th>
      <th>Membership</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.c_first_name %></td>
        <td><%= customer.c_last_name %></td>
        <td><%= customer.address %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.emergency_phone %></td>
        <td><%= customer.email %></td>
        <td><%= customer.membership_id %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path %>
</div>
