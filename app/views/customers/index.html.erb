<p id="notice"><%= notice %></p>
<h1>Client Search</h1>

<div class="panel panel-default">
  <div class="panel-body">
    <p id="notice"><%= notice %></p>


    <%= form_tag customers_path, :method => 'get' do %>
        <div class="col-xs-4 ">
          <div class="input-group">
            <%= text_field_tag :search, params[:search], :placeholder => "Find client", :class => "form-control" %>
            <span class="input-group-btn">
             <%= submit_tag "Go", :name => nil, :class => "btn btn-default" %>
          </span>
          </div><!-- /input-group -->
        </div>
    <% end %><%= link_to "Advanced Search", new_csearch_path, :class=>"btn btn-default" %><br>
    <br><br> <%= link_to 'New Customer', new_customer_path, :class=>"btn btn-default" %>

    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th>First</th>
          <th>Last</th>
          <th>DOB</th>
          <th>Address</th>
          <th>Phone</th>
          <th>Email</th>

          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.c_first_name %></td>
              <td><%= customer.c_last_name %></td>
              <td><%= customer.birthdate %></td>
              <td><%= customer.address %></td>
              <td><%= customer.phone %></td>
              <td><%= customer.email %></td>
              <td><%= link_to 'More Details', customer, :class=> "btn btn-info btn-sm" %></td>
              <td><%= link_to 'Edit', edit_customer_path(customer), :class=> "btn btn-warning btn-sm" %></td>
              <td><%= link_to 'Delete', customer, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "btn btn-danger btn-sm" %></td>
            </tr>
        <% end %>
        </tbody>
      </table>


      <br>


    </div>













  </div>
</div>


