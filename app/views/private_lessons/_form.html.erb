<%= form_for(@private_lesson) do |f| %>
  <% if @private_lesson.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@private_lesson.errors.count, "error") %> prohibited this private_lesson from being saved:</h2>

      <ul>
      <% @private_lesson.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <div class="panel panel-default">
      <div class="panel-heading"><h4>New Private Lesson Form

        <p id="demo"></p>
      </h4>
      </div>
      <div class="panel-body">
        <form>

          <div class="field">
            <%= f.label :instructor_id, "Instructor", :class => 'control-label' %><br>
            <%= collection_select :private_lesson, :instructor_id, Instructor.all.collect { |f| [ f.id, "#{f.i_first_name} #{f.i_last_name}" ] }, :first, :last, { prompt: "Select" }, :class => 'form-control' %><br>
          </div>
          <div class="field">
            <%= f.label :customer_id, "Customer", :class => 'control-label' %><br>
            <%= collection_select :private_lesson, :customer_id, Customer.all.collect { |f| [ f.id, "#{f.c_first_name} #{f.c_last_name}" ] }, :first, :last, { prompt: "Select" }, :class => 'form-control' %><br>
          </div>
          <div class="field">
            <%= f.label :date, "Date", :class => 'control-label' %><br>
            <%= f.date_select :date, :class => 'form-control' %><br>
          </div>
          <div class="field">
            <%= f.label :time, "Time", :class => 'control-label' %><br>
            <%= f.time_select :time, :class => 'form-control' %><br>
          </div>
          <div class="field">
            <%= f.label :cost, "Cost", :class => 'control-label' %><br>
            <%= f.text_field :cost, :class => 'form-control' %><br>
          </div>
          <div class="field">
            <%= f.label :classroom_id, "Classroom", :class => 'control-label' %><br>
            <%= f.collection_select :classroom_id, Classroom.all, :id, :classroom_description, { prompt: "Select" }, :class => 'form-control' %><br>
          </div>
          <div class="field">
            <%= f.label :comments, "Comments", :class => 'control-label' %><br>
            <%= f.text_area :comments, :class => 'form-control' %><br>
          </div>
          <div class="actions">
            <%= f.submit %>
          </div>
<% end %>
<br>




</form>


</div>
</div>
