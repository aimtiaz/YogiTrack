<%= form_for(@program_schedule) do |f| %>
  <% if @program_schedule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@program_schedule.errors.count, "error") %> prohibited this program_schedule from being saved:</h2>

      <ul>
      <% @program_schedule.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="panel panel-default">
      <div class="panel-heading"><h4>New Class Schedule

        <p id="demo"></p>
      </h4>
      </div>
      <div class="panel-body">
        <form>

          <div class="field">
            <%= f.label :program_id, "Select Class Type", :class => 'control-label' %><br>
            <%= f.collection_select :program_id, Program.all, :id, :program_description, { prompt: "Select" }, :class => 'form-control' %><br>
          </div>
          <div class="field">
            <%= f.label :instructor_id, "Instructor", :class => 'control-label' %><br>
            <%= collection_select :program_schedule, :instructor_id, Instructor.all.collect { |f| [ f.id, "#{f.i_first_name} #{f.i_last_name}" ] }, :first, :last, { prompt: "Select" }, :class => 'form-control' %><br>
          </div>
          <div class="field">
            <%= f.label :date, "Date", :class => 'control-label' %><br>
            <%= f.date_select :date, :class => 'form-control' %><br>
          </div>
          <div class="field">
            <%= f.label :start, "Start Time", :class => 'control-label' %><br>
            <%= f.time_select :start, :class => 'form-control' %><br>
          </div>
          <div class="field">
            <%= f.label :end, "End Time", :class => 'control-label' %><br>
            <%= f.time_select :end, :class => 'form-control' %><br>
          </div>
          <div class="field">
            <%= f.label :class_size, "Class Size", :class => 'control-label' %><br>
            <%= f.text_field :class_size, :class => 'form-control' %><br>
          </div>
          <div class="field">
            <%= f.label :classroom_id, "Classroom", :class => 'control-label' %><br>
            <%= f.collection_select :classroom_id, Classroom.all, :id, :classroom_description, { prompt: "Select" }, :class => 'form-control' %><br>
          </div>
          <div class="actions">
            <%= f.submit %>
          </div>
<% end %>
<br>


</form>


</div>
</div>

